<Window x:Class="Novel_App.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Novel_App.View" xmlns:viewmodel="clr-namespace:Novel_App.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:LoginViewModel}"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        >


    <Border CornerRadius="0" 
                BorderThickness="5"
                Opacity="1">

        <Border.Background>
            <ImageBrush ImageSource="\Images\backgroundLogin.jpg"/>
        </Border.Background>



        <Grid Opacity="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
                            Background="#FF79BCE2"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28AEED"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#278BEF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9"                            Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"                                         HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>


                <Button x:Name="btnClose"
                            Background="#ff3955"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFB21C31"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFB21C31"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9"                            Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"                                         HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </Grid>


            <Grid Grid.Row="2">
                <Image Source="/Images/b3.png"
                       Width="150" Height="140"
                       VerticalAlignment="Top"
   />
                <Border CornerRadius="50" 
                        BorderThickness="1" BorderBrush="#FFD18D60"
                  Margin="150 100 150 100"
                  Background="#72390B0B">


                    <StackPanel Width="300" Height="450"
                        
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        Margin="0,0,0,0"
                        >


                        <TextBlock Text="NOVEL READER"
                                   Margin="0 20 0 0"
                               Foreground="#FFF1E4E2"
                               FontSize="25"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>



                        <TextBlock Text="Username"
                               Foreground="#FFF1E4E2"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,20,0,0"/>

                        <TextBox x:Name="txtUser"
                                 Text="{Binding username, Mode=OneWayToSource}"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="#FFF1E4E2"
                             CaretBrush="Black"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="30,0,0,0">
                            <TextBox.Background>
                                <ImageBrush ImageSource="\Images\user.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left" />
                            </TextBox.Background>
                        </TextBox>


                        <TextBlock Text="Password"
                               Foreground="#FFF1E4E2"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,0"/>

                        <PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 FontSize="15"
                                 FontWeight="Medium"
                                 FontFamily="Montserrat"
                                 Foreground="#FFF1E4E2"
                                 CaretBrush="Black"
                                 BorderBrush="Black"
                                 BorderThickness="0,0,0,1"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin="0,5,0,0"
                                 Padding="30,0,0,0">
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="\Images\padlock.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>








                        <Button Command="{Binding LoginCommand}"
                            x:Name="btnLogin"
                            BorderThickness="0"
                            Content="LOGIN"
                            Foreground="White"
                            FontSize="12"
                            Grid.Column="2"
                            Margin="0,30,0,0">


                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#ff3955"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFB21C31"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="80,15,0,0">

                            <TextBlock Text="Forgot Password?"
                                   Foreground="Black"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"/>

                            <TextBlock Text="Reset"
                                   Foreground="Black"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"
                                   Cursor="Hand"
                                   Margin="8,0,0,0"/>
                            <CheckBox Content="Admin"
                                      Foreground="Black"
                                      FontFamily="Montserrat"
                                      HorizontalAlignment="Center"
                                      FontSize="12px"
                                      Margin="28 0 0 0 "
                                      IsChecked="{Binding isadmin, Mode=TwoWay}"
                                      />

                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
